<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/view_foot"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"/>
    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0px"
        android:layout_height="0px" />
    <LinearLayout
        android:id="@+id/layout_device_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="3dp"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_device_address"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/device_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:textSize="18sp"
                android:text=""/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_state"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/connection_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="@string/disconnected"
                android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/label_rssi"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/rssi_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text=""
                android:textSize="18sp"/>
            <LinearLayout
                android:id="@+id/layout_average_rssi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Average"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/rssi_average_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text=""
                    android:textSize="18sp"/>
            </LinearLayout>

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="10dp"-->
                <!--android:textStyle="bold"-->
                <!--android:text="Distance"-->
                <!--android:textSize="16sp"/>-->
            <!--<TextView-->
                <!--android:id="@+id/rssi_distance_value"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="5dp"-->
                <!--android:text="99m"-->
                <!--android:textSize="12sp"/>-->
        </LinearLayout>
        <RelativeLayout
                android:id="@+id/layout_pwd_info"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">
            <TextView
                android:id="@+id/txt_password_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/label_password"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/password_value1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txt_password_title"
                android:layout_marginLeft="8dp"
                android:text="@string/no_data"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/password_value2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txt_password_title"
                android:layout_below="@id/password_value1"
                android:layout_marginLeft="8dp"
                android:text="@string/no_data"
                android:textSize="18sp"/>
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/layout_key_info"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">
            <TextView
                android:id="@+id/txt_aes_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/label_aes"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/aes_value1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txt_aes_title"
                android:layout_marginLeft="8dp"
                android:text="@string/no_data"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/aes_value2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txt_aes_title"
                android:layout_below="@id/aes_value1"
                android:layout_marginLeft="8dp"
                android:text="@string/no_data"
                android:textSize="18sp"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/layout_tx_power"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Tx Power"
                android:textSize="16sp"/>
            <Spinner
                android:id="@+id/spinner_tx_power"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_tx_power_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="--"
                android:textSize="16sp"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/layout_connection_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <LinearLayout
                android:id="@+id/layout_connect_info"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">
                <TextView
                    android:id="@+id/txt_first_connect_time"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="1st Conn"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/txt_first_connect_time_value"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="23:59"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/txt_last_connect_time"
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:text="Last Conn"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/txt_last_connect_time_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="23:59"
                    android:textSize="18sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_disconnect_info"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_connect_info"
                android:visibility="visible">
                <TextView
                    android:id="@+id/txt_first_disconnect_time"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="1st Dis"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/txt_first_disconnect_time_value"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="23:59"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/txt_last_disconnect_time"
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:text="Last Dis"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/txt_last_disconnect_time_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="23:59"
                    android:textSize="18sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_thermal_command"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_disconnect_info"
                android:visibility="visible">
                <TextView
                    android:id="@+id/txt_thermal_command"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Cmd Cnt"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/txt_thermal_command_count"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="100"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/txt_thermal_csta"
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:text="Csta Cnt"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/txt_thermal_csta_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="4dp"
                    android:text="100"
                    android:textSize="18sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_disconnect_info2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_thermal_command"
                android:visibility="visible">
                <TextView
                    android:id="@+id/txt_disconnect_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Disconn Cnt"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/txt_disconnect_count_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:text="100"
                    android:textSize="18sp"/>
                <Button
                    android:id="@+id/btn_thermal_reset"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:padding="0dp"
                    android:layout_below="@id/layout_disconnect_info"
                    android:layout_alignParentRight="true"
                    android:text="Reset"/>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/label_data"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/data_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="@string/no_data"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_connect"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="2dp"
        android:padding="0dp"
        android:textSize="14sp"
        android:text="connect"/>
    <RelativeLayout
        android:id="@+id/layout_debug_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_device_info">
        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">
            <TextView
                android:id="@+id/txt_log"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:inputType="textMultiLine"
                android:textColor="@color/black"
                android:visibility="visible"/>
        </ScrollView>
        <Button
            android:id="@+id/btn_clear"
            android:layout_width="65dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="0dp"
            android:textColor="@color/dark_gray"
            android:textSize="10sp"
            android:text="Clear"/>
    </RelativeLayout>
</RelativeLayout>