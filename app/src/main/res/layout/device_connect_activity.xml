<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/view_foot"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"/>
    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0px"
        android:layout_height="0px" />
    <LinearLayout
        android:id="@+id/layout_device_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="3dp"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_device_address"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/device_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:textSize="18sp"
                android:text=""/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_state"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/connection_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="@string/disconnected"
                android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/label_rssi"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/rssi_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text=""
                android:textSize="18sp"/>
            <LinearLayout
                android:id="@+id/layout_average_rssi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Average"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/rssi_average_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text=""
                    android:textSize="18sp"/>
            </LinearLayout>

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="10dp"-->
                <!--android:textStyle="bold"-->
                <!--android:text="Distance"-->
                <!--android:textSize="16sp"/>-->
            <!--<TextView-->
                <!--android:id="@+id/rssi_distance_value"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="5dp"-->
                <!--android:text="99m"-->
                <!--android:textSize="12sp"/>-->
        </LinearLayout>
        <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">
            <TextView
                android:id="@+id/txt_password_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/label_password"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/password_value1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txt_password_title"
                android:layout_marginLeft="8dp"
                android:text="@string/no_data"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/password_value2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txt_password_title"
                android:layout_below="@id/password_value1"
                android:layout_marginLeft="8dp"
                android:text="@string/no_data"
                android:textSize="18sp"/>
        </RelativeLayout>
        <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">
            <TextView
                android:id="@+id/txt_aes_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/label_aes"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/aes_value1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txt_aes_title"
                android:layout_marginLeft="8dp"
                android:text="@string/no_data"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/aes_value2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txt_aes_title"
                android:layout_below="@id/aes_value1"
                android:layout_marginLeft="8dp"
                android:text="@string/no_data"
                android:textSize="18sp"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/layout_tx_power"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Tx Power"
                android:textSize="16sp"/>
            <Spinner
                android:id="@+id/spinner_tx_power"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_tx_power_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="--"
                android:textSize="16sp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/label_data"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/data_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="@string/no_data"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_connect"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="2dp"
        android:padding="0dp"
        android:textSize="14sp"
        android:text="connect"/>
    <Button
        android:id="@+id/btn_step_debug"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/btn_connect"
        android:layout_marginTop="5dp"
        android:layout_marginRight="2dp"
        android:padding="0dp"
        android:textSize="14sp"
        android:text="Next"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/img_arm_lock"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/layout_device_info"
        android:src="@drawable/gray_lock"
        android:visibility="visible"/>
    <LinearLayout
        android:id="@+id/layout_cmd"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/img_arm_lock"
        android:visibility="visible">
        <Button
            android:id="@+id/btn_arm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="0dp"
            android:layout_weight="1"
            android:textSize="30sp"
            android:text="Arm"/>
        <Button
            android:id="@+id/btn_check"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="0dp"
            android:layout_weight="1"
            android:textSize="30sp"
            android:text="Check"
            android:visibility="gone"/>
        <Button
            android:id="@+id/btn_unlock"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="0dp"
            android:layout_weight="1"
            android:textSize="30sp"
            android:text="Unlock"/>
    </LinearLayout>

    <View
        android:id="@+id/view_transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_device_info"/>
    <RelativeLayout
        android:id="@+id/layout_debug_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_transparent">
        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white">
            <TextView
                android:id="@+id/txt_log"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:inputType="textMultiLine"
                android:textColor="@android:color/black"
                android:visibility="visible"/>
        </ScrollView>
        <Button
            android:id="@+id/btn_clear"
            android:layout_width="65dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="0dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="10sp"
            android:text="Clear"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_setting_menu"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:background="@drawable/gray_blue"
        android:visibility="gone">
        <CheckBox
            android:id="@+id/check_auto_connect"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:text="Auto connect"
            android:background="@drawable/setting_item_background"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"/>
        <CheckBox
            android:id="@+id/check_auto_scroll_down"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/scroll_view"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:checked="true"
            android:text="Auto Scroll Down"
            android:background="@drawable/setting_item_background"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"
            android:visibility="gone"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:visibility="gone">
            <CheckBox
                android:id="@+id/check_key_less"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:textSize="12sp"
                android:text=""
                android:background="@drawable/setting_item_background"/>
            <TextView
                android:id="@+id/txt_key_less"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@android:color/white"
                android:text="Key less"
                android:background="@drawable/setting_item_background"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"/>
        <CheckBox
            android:id="@+id/check_step_debug"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:text="Step debug"
            android:background="@drawable/setting_item_background"
            android:visibility="gone"/>
        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:background="@color/light_gray"/>-->
        <CheckBox
            android:id="@+id/check_format_error"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:text="Format error"
            android:background="@drawable/setting_item_background"
            android:visibility="gone"/>
        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:background="@color/light_gray"/>-->
        <CheckBox
            android:id="@+id/check_ping_ack"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:checked="true"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:text="Ping ack"
            android:background="@drawable/setting_item_background"
            android:visibility="gone"/>
        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:background="@color/light_gray"/>-->
        <CheckBox
            android:id="@+id/check_tx_power"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:text="Tx Power Setting"
            android:background="@drawable/setting_item_background"
            android:visibility="visible"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@android:color/darker_gray"/>
        <CheckBox
            android:id="@+id/check_log"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:text="Log"
            android:background="@drawable/setting_item_background"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"/>
        <CheckBox
            android:id="@+id/check_debug_mode"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:checked="false"
            android:text="Debug mode"
            android:background="@drawable/setting_item_background"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <CheckBox
            android:id="@+id/check_stability"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:text="Stability Test"
            android:background="@drawable/setting_item_background"
            android:visibility="visible"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:background="@drawable/dark_gray"
        android:visibility="gone">
        <ProgressBar
            android:layout_width="35dp"
            android:layout_height="45dp"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/txt_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:textSize="20sp"
            android:text=""/>
    </LinearLayout>
</RelativeLayout>