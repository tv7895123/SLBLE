                    <!--android:id="@+id/twitch"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="twadfadfsdfadsfdaadfitch" />-->
        </RadioGroup>

    </RelativeLayout>
</LinearLayout>